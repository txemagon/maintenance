#!/bin/bash
# setup_rcp_target.sh

# ~/pepe: remote dir
# 192.168.1.39: ip of the source machine
# $3: netcating port

# Default port
PORT=$3
PORT=${PORT:-8901} # Avoid PORT=${3:-8901}, since
                   # load_script doesn't support it.

echo "TARGET MACHINE"
echo "=============="
echo

echo "Creating dir ~/pepe."
mkdir -p ~/pepe;
cd ~/pepe;

echo "Connection started. Decompressing."
nc 192.168.1.39 $PORT | pigz -d | tar xvf -
exec bash

